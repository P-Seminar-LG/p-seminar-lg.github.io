---
import "../styles/index.css";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import Umami from "../components/umami.astro";
---

<html lang="de">
  <head>
    <title>Me from the inside</title>
    <meta name="author" content="P-Seminar Laurentius Gymasium 2024" />
    <meta
      name="description"
      content="Wir bringen Schüler:innen innere Organe näher"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <Umami />
  </head>
  <body>
    <header>
      <h1 id="headline">Me from the Inside</h1>
      <p>Eine Reise durch den Körper</p>
    </header>
    <div id="organe">
      <div>
        <a href="/herz" aria-label="Herz"
          ><img src="/img/heartd.webp" alt="Herz" class="zoom_transition"/></a
        ><p>Herz</p>
      </div>
      <div>
        <a href="/gehirn" aria-label="Gehirn"
          ><img src="/img/braind.webp" alt="Gehirn" class="zoom_transition" /></a
        ><p>Gehirn</p>
      </div>
      <div>
        <a href="/lunge" aria-label="Lunge"
          ><img src="/img/lungd.webp" alt="Lunge" class="zoom_transition"/></a
        ><p>Lunge</p>
      </div>
    </div>
    <div id="catcontainer">
      <a href="/impressum" id="impressum" aria-label="Impressum"
        ><p>Impressum</p></a
      >
      <img id="cat" alt="Cat" src="/img/cat.webp" />
    </div>
  </body>
</html>
